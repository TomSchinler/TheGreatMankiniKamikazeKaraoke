<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".KamikazeSelect"
                android:background="@android:color/black">



    <TextView
        android:id="@+id/selectGenreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Genre_Select_Text"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mainTextColor"/>

    <Spinner
        android:id="@+id/genreSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="@dimen/spinner_horizontal_margin"
        android:layout_marginRight="@dimen/spinner_horizontal_margin"
        android:layout_below="@+id/selectGenreText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff8f9b8c"
        android:textAlignment="center"
        android:dropDownSelector="@color/mainTextColor"
        android:touchscreenBlocksFocus="false"/>

    <TextView
        android:id="@+id/selectDecadeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decade_Select_Text"
        android:layout_below="@+id/genreSelect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textColor="@color/mainTextColor"/>

    <Spinner
        android:id="@+id/decadeSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/selectDecadeText"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="@dimen/spinner_horizontal_margin"
        android:layout_marginRight="@dimen/spinner_horizontal_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/spinnerBackgroundColor"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/kamikaze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kamikaze_button_text"
        android:layout_below="@+id/decadeSelect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@color/kamikazeButtonBackground"
        android:onClick="song"/>

</RelativeLayout>
