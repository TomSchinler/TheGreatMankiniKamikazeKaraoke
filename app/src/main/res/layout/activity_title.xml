<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="tomschinler.thegreatman_kiniskamikazekaraoke.TitleActivity"
                android:background="#ffff0912">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mankiniPic"
        android:src="@drawable/mankinipic"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:id="@+id/kamikazeBars"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:layout_below="@id/mankiniPic"
        android:src="@drawable/kamikaze_bars"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Get Started"
        android:id="@+id/getStarted"
        android:background="#ff2aecff"
        android:onClick="songSelect"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
